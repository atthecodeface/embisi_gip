#a Variables
$arch = @ENV{"arch"};
$os = "linux";
$os = "cygwin" if ($arch eq "cygwin");

$bin_directory = "$os";
$test_dirs = "simple";
$debug_level = 0;

#a Run tests
$tests = "";
foreach $i (split(/ /,$test_dirs)) {
    $tests = "$tests tests/$i test.batch";
}
print  @ENV{"CYCLICITY_ROOT"}."/scripts/regress $bin_directory $debug_level $tests\n";
system( @ENV{"CYCLICITY_ROOT"}."/scripts/regress $bin_directory $debug_level $tests" );

#a Editor preferences and notes
# Local Variables: ***
# mode: perl ***
# outline-regexp: "#[a!]\\\|#[\t ]*[b-z][\t ]" ***
# End: ***

